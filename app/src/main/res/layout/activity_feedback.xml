<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aragreen"
    tools:context="com.ara.cabservices.Feedback">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aragreen4"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/feedbacklayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content_frame"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/feedname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/darker_gray"
            android:ems="16"
            android:textColor="@color/white"
            android:hint="Enter your Name"
            android:paddingLeft="10dp"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/feedno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:ems="16"
            android:hint="Enter your Contact no"
            android:paddingLeft="10dp"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:layout_weight="2.5"
                android:layout_width="360dp"
                android:id="@+id/feedpickuploc"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:background="@android:color/darker_gray"
                android:layout_height="match_parent">

            </Spinner>
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="50dp"
                android:background="@android:color/darker_gray"
                android:layout_height="40dp"
                android:src="@drawable/iconfor"
                android:id="@+id/imagelogoo"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_weight="2.5"
                android:layout_width="360dp"
                android:id="@+id/feeddroploc"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Ramanujam IT City"
                android:background="@android:color/darker_gray"
                android:layout_height="match_parent">

            </TextView>
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="50dp"
                android:background="@android:color/darker_gray"
                android:layout_height="40dp"
                android:src="@drawable/iconfor"
                android:id="@+id/imageloo"/>
        </LinearLayout>

